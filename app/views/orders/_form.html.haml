= form_for(@order) do |f|
  - if @order.errors.any?
    #error_explanation
      %h2
        = pluralize(@order.errors.count, "error")
        prohibited this order from being saved:
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :status
    %br/
    = f.number_field :status
  .field
    = f.label :user_id
    %br/
    = f.text_field :user_id
  .actions
    = f.submit
